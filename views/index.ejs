<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Message Board</title>
  </head>
  <body>
    <%- include("./nav") %>
    <main>
      <section class="header">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
          <path
            d="M64 0C28.7 0 0 28.7 0 64L0 352c0 35.3 28.7 64 64 64l96 0 0 80c0 6.1 3.4 11.6 8.8 14.3s11.9 2.1 16.8-1.5L309.3 416 448 416c35.3 0 64-28.7 64-64l0-288c0-35.3-28.7-64-64-64L64 0z"
          />
        </svg>
        <h1>Message Board</h1>
      </section>
      <section class="box">
        <% messages.forEach((message) => { %>
        <section>
          <div class="profile"></div>
          <section class="realBox">
            <span><%= message.username %></span>
            <span class="message"><%= message.message %></span>
            <span class="date">
              <%= message.date? message.date.toDateString(): 'No date available'
              %>
            </span>
            <a href="/<%= message.username %>" class="open">Open</a>
          </section>
        </section>
        <% }); %>
      </section>
    </main>
    <script>
      const boxes = document.querySelectorAll(".box > section");
      boxes.forEach((box, index) => {
        setTimeout(() => {
          box.style.opacity = "1";
          box.style.transform = "translateY(0)";
        }, index * 200);
      });

      function getRandomColor() {
        return `rgb(${Math.floor(Math.random() * 256)}, ${Math.floor(
          Math.random() * 256
        )}, ${Math.floor(Math.random() * 256)})`;
      }

      function applyRandomGradient() {
        const profiles = document.querySelectorAll(".profile");

        profiles.forEach((profile) => {
          const color1 = getRandomColor();
          const color2 = getRandomColor();
          const angle = Math.floor(Math.random() * 360);

          profile.style.background = `linear-gradient(${angle}deg, ${color1}, ${color2})`;
        });
      }

      applyRandomGradient();
    </script>
  </body>
</html>
